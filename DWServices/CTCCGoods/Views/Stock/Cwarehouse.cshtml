@section script{
    <script>
        function onrowsave(field, row, oldValue, $el) {
            //console.log(row);
            //$.ajax({
            //    type: "post",
            //    url: "/stock/ewh",
            //    data: { wh:row },
            //    dataType: 'JSON',
            //    success: function (data, status) {
            //        if (status == "success") {
            //            alert("编辑成功");
            //        }
            //    },
            //    error: function () {
            //        alert("Error");
            //    },
            //    complete: function () {

            //    }

            //});
            if (row.id) {
                $.post("/stock/ewh", row, function (data) {
                    if (data.ok) {
