@{
    ViewBag.Title = "enum";
}

@section script{
    <script>
        $(function () {
            var oTable = new TableInit();
            oTable.Init();
            var oButtonInit = new ButtonInit();
            oButtonInit.Init();

        });
        var TableInit = function () {
            var oTableInit = new Object();
            oTableInit.Init = function () {
                $('#tb').bootstrapTable({
                    url: '/plan/queryenums',         //请求后台的URL（*）
                    method: 'get',                      //请求方式（*）
                    toolbar: '#toolbar',                //工具按钮用哪个容器
                    striped: true,                      //是否显示行间隔色
                    cache: false,                       //是否使用缓存，默认为true，所以一般情况下需要设置一下这个属性（*）
                    pagination: true,                   //是否显示分页（*）
                    sortable: true,                     //是否启用排序
                    sortOrder: "asc",                   //排序方式
                    queryParams: oTableInit.queryParams,//传递参数（*）
                    sidePagination: "server",           //分页方式：client客户端分页，server服务端分页（*）
                    pageNumber: 1,                       //初始化加载第一页，默认第一页
                    pageSize: 10,                       //每页的记录行数（*）
                    pageList: [10, 25, 50, 100],        //可供选择的每页的行数（*）
                    search: true,                       //是否显示表格搜索，此搜索是客户端搜索，不会进服务端，所以，个人感觉意义不大
                    strictSearch: true,
                    showColumns: true,                  //是否显示所有的列
                    showRefresh: true,                  //是否显示刷新按钮
                    minimumCountColumns: 2,             //最少允许的列数
                    clickToSelect: false,                //是否启用点击选中行
                    /*    height: 500,  */                      //行高，如果没有设置height属性，表格自动根据记录条数觉得表格高度
                    uniqueId: "ID",                     //每一行的唯一标识，一般为主键列
                    showToggle: true,                    //是否显示详细视图和列表视图的切换按钮
                    cardView: false,                    //是否显示详细视图
                    detailView: false,                   //是否显示父子表
                    columns: [
                        {
                            field: 'id',
                            title: 'id',
                            visible: false,
                        },
                        {
                            field: 'name',
                            title: '名称',
                            editable: {
                                type: 'text',
                                title: '名称',
                                validate: function (v) {
                                    if (!v) return '名称不能为空';
                                }
                            },
                            sortable: true
                        },
                        {
                            field: 'val',
                            title: '可选值（以英文逗号分隔）',
                            editable: {
                                type: 'text',
                                title: '可选值',
                                validate: function (v) {
                                    if (!v) return '可选值不能为空';
                                }
                            },
                            sortable: true
                        },
                        {
                            field: 'eclass',
                            title: '分类',
                            editable: {
                                type: 'text',
                                title: '分类',
                                validate: function (v) {
                                    if (!v) return '分类不能为空';
                                }
                            },
                            sortable: true
                        },
                        {
                            field: 'option',
                            title: '操作',
                            width: '10%',
                            //visible: userType != 0 ? false : true,
                            formatter: function () {
                                return "<a class='btn btn-danger delete' style='height:20px;line-height:20px;font-size: 14px;padding-top: 0;padding-bottom:0;'>删除</a>";
                            },
                            events: {
                                'click .delete': function (e, value, row, index) {
                                    var id = row['id'];
                                    if (!id) return false;
                                    if (!confirm('您确认删除吗？')) return false;
                                    $.post('/plan/deleteenum', { 'id': id }, function (result) {
                                        if (result.ok) {
                                            alert(result.msg);
                                            location.reload();
                                        } else {
                                            var msg = result.msg + "\n\n";
                                            if (result.data) {
                                                for (var i = 0; i < result.data.length; i++) {
                                                    msg += result.data[i]['name'] + "\n";
                                                }
                                            }
                                            alert(msg);
                                        }
                                    });
                                }
                            },
                        },
                    ],
                    onEditableSave: function (field, row, oldValue, $el) {
                        var url;
                        if (row.id) {
                            url = "/plan/updateenum";
                        } else if (row.name && row.val && row.eclass) {
                            url = "/plan/insertenum";
                        } else {
                            return false;
                        }
                        $.ajax({
                            type: "post",
                            url: url,
                            data: { "id": row.id, "name": row.name, "val": row.val,"eclass":row.eclass },
                            dataType: 'JSON',
                            success: function (data) {
                                if (data.ok) {
                                    if (data.id) {
                                        row.id = data.id;
                                    }
                                } else {
                                    $el[0].innerHTML = oldValue;
                                    alert(data.msg);
                                }
                            },
                            error: function () {
                                alert('编辑失败');
                            }
                        });
                    },
                });
            };

            oTableInit.queryParams = function (params) {
                var temp = {
                    limit: params.limit,
                    offset: params.offset
                };
                return temp;
            };
            return oTableInit;
        };

        var ButtonInit = function () {
            var oInit = new Object();
            var postdata = {};

            oInit.Init = function () {

            };

            return oInit;
        };

        $("#btn_add").click(function () {
            var data = $('#tb').bootstrapTable('getData');
            var index = data.length;
            $('#tb').bootstrapTable('insertRow', {
                index: index,
                row: {
                    id: "",
                    name: "",
                    val: "",
                    eclass:"通用"
                },
            });
        });
    </script>
}

<div class="container">

    <div id="toolbar" class="btn-group">
        <button id="btn_add" type="button" class="btn btn-default" auth>
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>新增
        </button>
        <a href="/plan/templet" class="btn btn-warning">模板管理</a>
    </div>
    <table id="tb"></table>

</div>