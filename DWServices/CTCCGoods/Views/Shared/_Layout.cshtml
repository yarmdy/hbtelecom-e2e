    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="/js/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/bootstarp_table/bootstrap-table.js"></script>
    <script src="/js/bootstrap3-editable/js/bootstrap-editable.min.js"></script>
    <script src="/js/bootstarp_table/bootstrap-table-zh-CN.js"></script>
    <script src="/js/bootstrap3-editable/js/bootstrap-table-editable.js"></script>
    <script src="/js/bootstrap-table-export.js"></script>
    <script src="/js/tableExport.min.js"></script>
    <script src="/js/xlsx.core.min.js"></script>
    <script src="/js/FileSaver.min.js"></script>
    <script src="/js/laydate/laydate.js"></script>
    <script src="~/js/velocity.min.js"></script>
    <script>
        $("#modifypwd").click(function () {
            $("#originalpwd").val("");
            $("#newpwd").val("");
            $("#confirmpwd").val("");
            $("#mymodal").modal();
            return false;
        });
        $("#confirmmodify").click(function () {
            var opwd = $("#originalpwd").val().trim();
            var npwd = $("#newpwd").val().trim();
            var cpwd = $("#confirmpwd").val().trim();
            if (!(opwd && npwd && cpwd)) {
                $("#msg").text("字段不能为空");
                setTimeout(function () {
                    $("#msg").text("");
                }, 5000);
                return false;
            }
            //var reg = /^(?![a-zA-Z]+$)(?![A-Z0-9]+$)(?![A-Z\W_]+$)(?![a-z0-9]+$)(?![a-z\W_]+$)(?![0-9\W_]+$)[a-zA-Z0-9\W_]{6,}$/;
            var reg = /^.*(?=.{10,})(?=.*[0-9])(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9]).*$/;
            if (!reg.test(npwd)) {
                $("#msg").text("密码不符合规范");
                setTimeout(function () {
                    $("#msg").text("");
                }, 5000);
                return false;
            }
            if (npwd.length < 10) {
                $("#msg").text("密码长度应大于等于10位");
                setTimeout(function () {
                    $("#msg").text("");
                }, 5000);
                return false;
            }
            if (npwd !== cpwd) {
                $("#msg").text("两次密码输入不一致");
                setTimeout(function () {
                    $("#msg").text("");
                }, 5000);
                return false;
            }
            $.ajax({
                url: "/login/modifypwd",
                data: { "opwd": opwd, "npwd": npwd },
                type: "post",
                dataType: "json",
                success: function (result) {
                    if (!result.status) {
                        $("#msg").text(result.msg);
                        setTimeout(function () {
                            $("#msg").text("");
                        }, 5000);
                    } else {
                        $("#mymodal").modal("hide");
                        alert("修改成功");
                    }
                },
                error: function () {
                    console.log("修改密码异常");
                }
            });
        });
    </script>
    @RenderSection("script", required: false)
    <script>
        $(function () {
            @if(ViewBag.loginuser.utype!=0){
            <text>
            $("[auth]").each(function () {
                if ($(this).attr("auth").indexOf("@(ViewBag.loginuser.utype)") < 0) {
                    $(this).hide();
                }
            });
            setTimeout(function () {
                $(".editable").off("click");
            }, 100);
            </text>
            }

            @if(updatepwd){
            <text>
            $("#modifypwd").trigger("click");
            </text>
            }

            $(".dropdown-menu>.tt a").on("click", function () {
                return false;
            });
        });
    </script>
</body>
